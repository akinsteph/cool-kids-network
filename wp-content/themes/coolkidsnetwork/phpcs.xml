<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
  <description>PHPCS configuration file for WordPress coding standards.</description>
  <rule ref="WordPress"/>
  
    <exclude name="WordPress.WhiteSpace.ControlStructureSpacing"/>
    <exclude name="WordPress.WhiteSpace.OperatorSpacing"/>
    <exclude name="WordPress.WhiteSpace.ArrayIndentation"/>
    <exclude name="WordPress.WhiteSpace.FunctionSpacing"/>
    <exclude name="WordPress.WhiteSpace.BlockSpacing"/>
    <exclude name="WordPress.WhiteSpace.ExtraWhitespace"/>
    <exclude name="WordPress.WhiteSpace.NoTrailingWhitespace"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceAfterComma"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceBeforeComma"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceAfterSemicolon"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceBeforeSemicolon"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceAfterOpeningBrace"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceBeforeClosingBrace"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceAfterOpeningBrace"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceBeforeClosingBrace"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceAfterOpeningBrace"/>
    <exclude name="WordPress.WhiteSpace.NoSpaceBeforeClosingBrace"/>
    <exclude name="WordPress.NamingConventions.PrefixAllGlobals"/>
  </rule>
  
  <rule ref="Generic.WhiteSpace.ScopeIndent">
    <properties>
      <property name="indent" value="1"/>
      <property name="tabIndent" value="true"/>
    </properties>
  </rule>
  <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
  
  <exclude-pattern>/vendor/*</exclude-pattern>
  <exclude-pattern>/node_modules/*</exclude-pattern>
  <file>.</file>
</ruleset>